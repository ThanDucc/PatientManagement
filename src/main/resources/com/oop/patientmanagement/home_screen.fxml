<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.effect.Blend?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" styleClass="body"
      stylesheets="@background.css"
      fx:controller="com.oop.patientmanagement.Controller.MainController">

    <children>
        <Pane layoutY="-14.0" prefHeight="500.0" prefWidth="700.0">
            <children>
                <Label fx:id="label" contentDisplay="CENTER" layoutX="130.0" layoutY="57.0" prefHeight="75.0"
                       prefWidth="550.0" text="Patient Management System" textAlignment="CENTER"
                       textFill="#037781">
                    <font>
                        <Font size="38.0"/>
                    </font>
                </Label>
                <Button blendMode="GREEN" cache="true" layoutX="250.0" layoutY="199.0" mnemonicParsing="false"
                        onAction="#searchPatient" prefHeight="40.0" prefWidth="200.0" text="Search Patient">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
                <Button fx:id="SwitchHistory" blendMode="GREEN" layoutX="250.0" layoutY="254.0" mnemonicParsing="false"
                        onAction="#addPatient" prefHeight="40.0" prefWidth="200.0" text="Add Patient">
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <effect>
                        <Blend/>
                    </effect>
                </Button>
                <Button fx:id="SwitchFavourite" blendMode="GREEN" layoutX="250.0" layoutY="309.0"
                        mnemonicParsing="false" onAction="#editPatient" prefHeight="40.0" prefWidth="200.0"
                        text="Edit Patient">
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <effect>
                        <Blend/>
                    </effect>
                </Button>
                <Button blendMode="GREEN" layoutX="250.0" layoutY="364.0" mnemonicParsing="false"
                        onAction="#removePatient" prefHeight="40.0" prefWidth="200.0" text="Remove Patient">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
                <Button blendMode="SOFT_LIGHT" layoutX="250.0" layoutY="419.0" mnemonicParsing="false"
                        onAction="#exit" prefHeight="40.0" prefWidth="200.0" text="Exit">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
            </children>
            <effect>
                <Blend/>
            </effect>
        </Pane>
    </children>

</VBox>
